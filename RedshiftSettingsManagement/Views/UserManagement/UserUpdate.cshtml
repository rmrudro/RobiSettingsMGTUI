
@{
    ViewData["Title"] = "UserUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .nextRow {
        padding-top: 40px;
        padding-left:40px;
    }
</style>
<link href="~/css/bootstrap/bootstrap431min.css" rel="stylesheet" />
<link href="~/css/datepicker/bootstrapDatepicker.css" rel="stylesheet" />

<link href="~/css/site.css" rel="stylesheet" />
