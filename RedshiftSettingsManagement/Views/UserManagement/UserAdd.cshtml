<h2 style="padding-top:50px"></h2>

<div class="row" style="padding-top:25px;padding-bottom:15px;">
    <div class="col-md-8 col-md-offset-2">
        <div class="alldiv" >
            <div class="altblhead">
                <h2 class="hdrRobiAxia">
                    Add New User
                </h2>
            </div>

            <div class="row" style="padding-top:30px;padding-bottom:30px;">
                <div class="col-md-2 col-md-offset-1 dvRobiMedium"> UserName </div>
                <div class="col-md-3" style="width:initial">

                    <input type="text" class="form-control txtusername txtboxdesign inputFont" required>

                </div>
                <div class="col-md-2 dvRobiMedium">
                    Date Of Birth
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control datepickers txtboxdesign inputFont" required>
                </div>
                <div class="col-md-1">

                </div>
                <div class="col-md-2 col-md-offset-1 dvRobiMedium nextRow">
                    First Name
                </div>
                <div class="col-md-3 nextRow">
                    <input type="text" class="form-control txtfirstName txtboxdesign inputFont" required>
                </div>
                <div class="col-md-2 dvRobiMedium  nextRow">
                    Last Name
                </div>
                <div class="col-md-3 nextRow">
                    <input type="text" class="form-control txtlastName txtboxdesign inputFont" required>
                </div>
                <div class="col-md-1 nextRow">
                    
                </div>
                <div class="col-md-2 dvRobiMedium col-md-offset-1 nextRow">
                    Select Role
                </div>
                <div class="col-md-3 nextRow" style="width:initial">


                    <select class="form-control usrole txtboxdesign inputFont" id="usrole">
                        <option>Select Role</option>
                    </select>


                </div>
                <div class="col-md-2 dvRobiMedium nextRow">
                    Select Channel
                </div>
                <div class="col-md-3 nextRow" style="width:initial">


                    <select class="form-control usrchannel txtboxdesign inputFont" id="usrchannel">
                        <option>Select Channel</option>
                    </select>


                </div>
                <div class="col-md-1"></div>
                <div class="col-md-2 col-md-offset-1  dvRobiMedium  nextRow">
                    Email
                </div>
                <div class="col-md-3 nextRow">
                    <input type="email" class="form-control txtemail txtboxdesign inputFont" required>
                </div>


                <div class="col-md-2 dvRobiMedium nextRow">
                    Address
                </div>
                <div class="col-md-3 nextRow">
                    <textarea class="form-control txtaddress inputFont" rows="3" placeholder="Address" required></textarea>
                </div>
                <div class="col-md-1 nextRow">

                </div>
                <div class="col-md-2 col-md-offset-1 dvRobiMedium nextRow">
                    Contact
                </div>
                <div class="col-md-3 nextRow">
                    <input type="number" class="form-control txtContact txtboxdesign inputFont" required>
                </div>

                <div class="col-md-2   dvRobiMedium  nextRow">
                    Retailer MSISDN Airtel
                </div>


                <div class="col-md-3 nextRow">
                    <input type="number" class="form-control txtRetailerMSISDNAirtel txtboxdesign inputFont" required>
                </div>
                <div class="col-md-1"></div>

                <div class="col-md-2 col-md-offset-1  dvRobiMedium  nextRow">
                    Retailer MSISDN Robi
                </div>

                <div class="col-md-3 nextRow">
                    <input type="number" class="form-control txtRetailerMSISDNRobi txtboxdesign inputFont" required>
                </div>
                <div class="col-md-2   dvRobiMedium  nextRow">
                    Retailer Code Airtel
                </div>

                <div class="col-md-3 nextRow">
                    <input type="text" class="form-control txtRetailerCodeAirtel txtboxdesign inputFont" required>
                </div>

                <div class="col-md-2 col-md-offset-1  dvRobiMedium  nextRow">
                    Retailer Code Robi
                </div>

                <div class="col-md-3 nextRow">
                    <input type="text" class="form-control txtRetailerCodeRobi txtboxdesign inputFont" required>
                </div>

                <div class="col-md-2 nextRow dvRobiMedium">
                    Password
                    
                </div>

                <div class="col-md-2 nextRow">
                    <input type="text" class="form-control txtPasswordGenerator txtboxdesign inputFont" required  data-size="12" data-character-set="a-z,A-Z,0-9,#">
                </div>

                <div class="col-md-1 nextRow dvRobiMedium">
                    <button type="button" class="btn btn-primary btnpasswordGenerate  allbutton btnCommonAll"> Generate</button>
                </div>


                <div class="col-md-3 col-md-offset-5 nextRow">
                    <button type="button" class="btn btn-block btn-success btnAddUser allbutton btnCommonAll" style="color:white;">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
