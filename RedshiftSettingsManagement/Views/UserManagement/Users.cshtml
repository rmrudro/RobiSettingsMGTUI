<h2 style="padding-top:40px"></h2>
<div id="load"></div>
<div class="row" style="padding-top:40px">
    <div class="col-md-1 col-md-offset-1 dvRobiMedium">
        UserName
    </div>
    <div class="col-md-2">
        <input type="text" class="form-control txtusename txtboxdesign" id="txtusrname">
    </div>
    <div class="col-md-1 dvRobiMedium">
        Select Role
    </div>
    <div class="col-md-2">
        <select class="form-control usrole txtboxdesign" id="usrole">
            <option>Choose Role</option>
        </select>
    </div>
    <div class="col-md-1">

        <button type="button" class="btn btn-dark btn_Search allbutton btnCommonAll" style="color:white;width:80px">Search</button>

    </div>
    <div class="col-md-1">
        <button type="button" class="btn  btn_Export allbutton btnCommonAll" style="color:white;width:80px">Export</button>

    </div>
    <div class="col-md-2">

        <button type="button" class="btn  btn_btnOperation allbutton btnCommonAll" style="color:white;width:90px" hidden>Batch Operation</button>

    </div>
    <div class="col-md-1">

    </div>

    <div class="col-md-10 col-md-offset-1 nextRow">
        <div class="alldiv">

            <div class="altblhead">
                <h2 class="hdrRobiAxia">
                    User Information

                    <button type="button" onclick="location.href='./UserAdd'" class="btn btn-dark channeladd" style="float:right;color:white;">Add</button>

                </h2>
                
            </div>

            <table id="usertable" class="col-md-12 col-xs-12 table table-fixed table-bordered table-striped table-condensed cf tblallUserlist"
                    width:100% !important">

                <thead id="usthead">
                    <tr>
                        <th class="dvRobiMedium" style="text-align:center;width:70px;">#</th>
                        <th class="dvRobiMedium" style="text-align:center;width:200px;" class="col-xs-2">User Name</th>  @*class="col-xs-2"  width:100px;     *@
                        <th class="dvRobiMedium" style="text-align:center;width:200px;" class="col-xs-2">First Name</th> @*class="col-xs-2"  width:100px;    *@
                        <th class="dvRobiMedium" style="text-align:center;width:200px;" class="col-xs-2">Last Name</th> @*class="col-xs-2"  width:100px;   *@
                        <th class="dvRobiMedium" style="text-align:center;width:300px;" class="col-xs-2">Email</th> @*class="col-xs-2"  width:100px;   *@
                        <th class="dvRobiMedium" style="text-align:center;width:200px;" class="col-xs-2">Role</th> @*class="col-xs-2"   width:100px;   *@
                        <th class="dvRobiMedium" style="text-align:center;width:200px;" class="col-xs-2"></th> @*class="col-xs-2"   width:100px    *@
                    </tr>
                </thead>
                <tbody id="tbl_UserList"></tbody>
            </table>
        </div>
    </div>
    <div class="col-md-1">

    </div>
</div>

<script>

    document.onreadystatechange = function () {

        var state = document.readyState
        if (state == 'complete') {
            setTimeout(function () {
                document.getElementById('interactive');
                document.getElementById('load').style.visibility = "hidden";
            }, 2000);
        }
    }

</script>
