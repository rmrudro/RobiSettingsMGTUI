<style>

    #load {
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 9999;
        background: url('/images/loader/lg.comet-spinner.gif') no-repeat center center rgba(0,0,0,0.25);
        /*background: url('../../wwwroot/images/loader/lg.comet-spinner.gif') !important;*/
    }

    .btn_Search {
        /*background-image: url('../../wwwroot/images/buttons/search_btn_bg_#2f3242.png');*/
        /*background-image: url('../images/buttons/search_btn_bg_#2f3242.png');*/
        background-color: #2f3242;
        cursor: pointer;
        border: none;
        color: white;
    }

    .btn_Export {
        background-color: #842e62;
        cursor: pointer;
        border: none;
        color: white;
    }

    .btn_btnOperation {
        background-color: #b9264d;
        cursor: pointer;
        border: none;
        color: white;
    }

    .nextRow {
        padding-top: 20px;
    }

    .txtboxdesign {
        border-radius: 5px;
        height: 30px;
    }


    #usertable_paginate {
        text-align: center;
        width: 100%;
    }

    .paginate_button {
        width: 50px;
        height: 30px;
        text-align: center;
        font-size: 18px;
        padding-left: 7px;
        padding-right: 7px;
        background-color: white;
        border-color: #a7a9ac;
    }

    #usertable_previous {
        width: 80px;
        padding-right: 80px;
